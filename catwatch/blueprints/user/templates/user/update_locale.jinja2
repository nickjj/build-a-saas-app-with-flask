{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}

{% block title %}Update your language settings{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-4 col-md-offset-4 well">
          {% call f.form_tag('user.update_locale') %}
              <legend>Update locale settings</legend>

            {% call f.form_group(form.locale, css_class='sm-margin-bottom') %}
            {% endcall %}

              <div class="row">
                  <div class="col-md-6">
                      <button type="submit" class="btn btn-primary btn-block">
                          {{ _('Save') }}
                      </button>
                  </div>
                  <div class="col-md-6">
                      <div class="visible-xs visible-sm sm-margin-top"></div>
                      <a href="{{ url_for('user.settings') }}"
                         class="btn btn-default btn-block">
                          {{ _('Nevermind') }}
                      </a>
                  </div>
              </div>
          {% endcall %}
        </div>
    </div>
{% endblock %}
